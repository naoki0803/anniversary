<div class="main-contents">

  <%# カード本体 %>
  <div class="card my-3 ms-5" style="width: 67%; height: 440px;">
    <%# カードヘッダー %>
    <div class="row g-0" style="height: 10%;">
      <div class="col-md-12 border-bottom card-header d-flex align-items-center justify-content-between">
      
        <div class="left d-flex align-items-center">
          <h6 class="card-title me-2"><%= @anniversary.anniversary_date %> </h6>
          <h4 class="card-title"><%= link_to @anniversary.anniversary_name, anniversary_path(@anniversary.id) %> </h4>
        </div>

        <div class="right">
          <%= link_to @anniversary.user.nickname, user_path(@anniversary.user.id)%>
          <img src="https://github.com/mdo.png" alt="" width="32" height="32" class="rounded-circle me-2">
        </div>
      
      </div> 
    </div>
    
    <%# カードメイン %>
    <div class="row g-0 overflow-scroll" style="width: 100%; height: 100%;">
      
      <%# 画像全体 col-8で横のグリッドを指定 %>
      <div class="col-md-8 " style="max-width: 511px; margin-top: 10px; ">

          <%= image_tag @anniversary.image, class:"img-fluid ", style:"object-fit: cover;"%>
        
      </div>

      <%# 詳細欄といいねとかの欄%>
      <div class="col-md-4 overflow-scroll" style="max-width: 800px; height: 100%;">

        <div class="card-body overflow-scroll" style="height: 75%">
          <p class="card-text"><%= @anniversary.anniversary_description %></p>
          <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
        </div>

        <div class="card-footer bg-transparent border-success" style="height: 15%;">
          <div class="card-footer-top d-flex align-items-center justify-content-between">
            <div class="data">Post：<%= @anniversary.created_at.strftime('%Y/%m/%d') %></div>
            <div class="who">Who：<%= @anniversary.who_anniversary %></div>
          </div>
          
          <div class="card-footer-bottom d-flex align-items-center justify-content-between">
            <div class="category">Category：<%= @anniversary.category.name %></div>
            <div id = "like_<%= @anniversary.id %>">
              <%= render partial: "likes/like", locals: { anniversary: @anniversary } %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

