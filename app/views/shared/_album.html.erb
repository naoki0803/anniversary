<div class="album py-5">
  <div class="container">
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
      <% @anniversaries.each do |anniversary| %>
        <div class="col">
          <div class="card shadow-sm">
          
            <%= image_tag anniversary.image, class:"img-fluid"%>
            <div class="card-body">
              <p class="card-text"><%= "#{anniversary.anniversary_date} | #{anniversary.anniversary_name}" %></p>

              <p class="card-text"><%= anniversary.anniversary_description %></p>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to "View", anniversary_path(anniversary.id) %></button>
                  <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button>
                </div>

                <div class="d-flex align-items-center justify-content-center px-2 me-2  " id = "like_<%= anniversary.id %>">
                  <%= render partial: "likes/like", locals: { anniversary: anniversary } %>
                </div>


              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>