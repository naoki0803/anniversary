<%= render "shared/header" %>


<div class="container new-wrapper d-flex align-items-center justify-content-center">
  
  <div class="row">

    <div class="col-sm-12 col-md-6">
      <%= image_tag "signin.jpg", class:"img-fluid shadow rounded"%>
    </div>

    <div class="col-sm-12 col-md-6 d-flex align-items-center justify-content-center  my-2">

      <div class="wrapper d-flex justify-content-center p-4 google-font">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          
          <div class='login-flash-message'>
            <%= flash[:notice] %>
            <%= flash[:alert] %>
          </div>

          <div class="mb-3">
            <label for="email" class="form-label m-0">Email</label>
            <%= f.email_field :email, autofocus: true, placeholder:"Email", autocomplete: "Email", class: "form-control", id:"email"%>
          </div>

          <div class="mb-3">
            <label for="password" class="form-label m-0">Password</label>
            <%= f.password_field :password, placeholder:"Password", autocomplete: "Password", class: "form-control", id:"password"%>
          </div>

          <div class="mb-3">
            <%= f.submit "Log in", class:"btn btn-outline-dark "%>
          </div>

        <% end %>
      </div>

    </div>
  </div>

</div>
<%= render "shared/footer" %>