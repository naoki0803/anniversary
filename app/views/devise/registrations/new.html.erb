<%= render "shared/header" %>


<div class="container new-wrapper d-flex align-items-center justify-content-center overflow-scroll">
  
  <div class="row">

    <div class="col-sm-12 col-md-6 d-flex align-items-center">
      <%= image_tag "signup.jpg", class:"img-fluid shadow rounded"%>
    </div>

    <div class="col-sm-12 col-md-6 d-flex align-items-center justify-content-center  my-2">

      <div class="wrapper d-flex justify-content-center p-4 google-font">
        <%= form_with model: @user, url: user_registration_path, class: 'registration-main', local: true do |f| %>
          
          <%= render partial:'shared/error_messages', locals: { model: f.object } %>

          <div class="mb-3">
            <%= f.label :email, class:"form-label m-0"%>
            <%= f.email_field :email, autofocus: true, placeholder:"Email", autocomplete: "Email", class: "form-control"%>
          </div>

          <div class="mb-3">
            <%= f.label :password, class:"form-label m-0" %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length%>)</em>
            <% end %><br />
            <%= f.password_field :password, placeholder:"6文字以上の半角英数字", autocomplete: "new-password", class: "form-control" %>
          </div>

          <div class="mb-3">
            <%= f.label :password_confirmation, class:"form-label m-0" %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control"  %>
          </div>

          <div class="mb-3">
            <%= f.label :nickname, class:"form-label m-0" %>
            <%= f.text_field :nickname, autocomplete: "nickname", class: "form-control"  %>
          </div>

          <div class="mb-3">
            <%= f.label :birth_date, class:"form-label m-0" %>
            <%= f.date_field :birth_date, class:"form-control"%>
          </div>

          <div class="mb-3">
            <%= f.submit "Sign up", class:"btn btn-outline-dark " %>
          </div>
        <% end %>
      </div>
    </div>

  </div>

</div>

<%= render "shared/footer" %>