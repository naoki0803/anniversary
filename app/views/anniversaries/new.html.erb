<%= form_with model: @anniversary, class:"form-warapper", local: true do |f| %>

  <%#= render  partial:'shared/error_messages', locals: { model: f.object }%>
  
  <div class="form-field">
    <p>画像</p>
    
    <%= f.file_field :image, id:"item-image" %>
  </div>

  <div class="form-field">
    <p>記念日名</p>
    
    <%= f.text_area :anniversary_name, class:"anniversary_name", id:"anniversary_name", placeholder:"記念日名", maxlength:"40" %>
  </div>
  
  <div class="form-field">
    <p>記念日</p>
    
    <div class="field">
      <%= f.label :anniversary_date %><br />
      <div class='input-birth-wrap'>
        <%= raw sprintf(
                    f.date_select(
                      :anniversary_date,
                      class:'select-birth',
                      id:"birth-date",
                      use_month_numbers: true,
                      prompt:'--',
                      start_year: 1930,
                      end_year: (Time.now.year - 5),
                      date_separator: '%s'),
                    "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
      </div>
    </div>
  </div>
  

  <div class="form-field">
    <p>記念日の説明</p>
    
    <%= f.text_area :anniversary_description, class:"anniversary_description", id:"anniversary_description", placeholder:"記念日の説明" ,rows:"7" ,maxlength:"1000" %>
  </div>

  <div class="form-field">
    <p>カテゴリー</p>
    
    <%= f.collection_select(:category_id, Category.all, :id, :name, {}, {class:"select-box", id:"item-category"}) %>
  </div>

  <div class="form-field">
    <p>誰の記念日</p>
    
    <%= f.text_area :who_anniversary, class:"who_anniversary", id:"who_anniversary", placeholder:"誰の記念日ですか？" ,rows:"7" ,maxlength:"1000" %>
  </div>

  <div class="form-field">
  <%= f.submit "SEND" %>
  </div>
<% end %>